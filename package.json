{
  "name": "@hjfc/pack-template",
  "version": "0.0.2",
  "description": "typescript lib common template",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "files": [
    "es",
    "lib"
  ],
  "scripts": {
    "build": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "build:preserve": "rollup --config rollup.preserve.ts --configPlugin @rollup/plugin-typescript",
    "prepare": "husky",
    "lint:ts": "tsc --noEmit && eslint src --ext .ts,.tsx",
    "lint:style": "stylelint 'src/**/*.less'",
    "commit": "npx git-cz",
    "publish": "npm publish --access public",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch",
    "release:major:beta": "release-it major --preRelease=beta",
    "release:minor:beta": "release-it minor --preRelease=beta",
    "release:patch:beta": "release-it patch --preRelease=beta",
    "run:publish": "node ./scripts/publish.js",
    "test": "vitest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "xxx"
  },
  "authors": [
    "xx"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/xx"
  },
  "homepage": "https://github.com/xx#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@fruits-chain/eslint-config-preset": "^0.3.23",
    "@fruits-chain/prettier-config-preset": "^0.0.5",
    "@fruits-chain/stylelint-config-preset": "^0.1.3",
    "@release-it/conventional-changelog": "^8.0.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "cross-env": "^7.0.3",
    "esbuild": "^0.21.2",
    "gh-pages": "^6.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "release-it": "^17.2.1",
    "rollup": "^4.17.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.0",
    "vite": "^5.2.11",
    "vitepress": "^1.1.4",
    "vitest": "^1.6.0"
  },
  "prettier": "@fruits-chain/prettier-config-preset",
  "lint-staged": {
    "*.{yml,yaml,md}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "bash -c \"tsc -p ./tsconfig.json --noEmit\"",
      "eslint --fix",
      "prettier --write"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": false
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@fruits-chain/utils": "^1.0.6"
  },
  "packageManager": "yarn@4.2.2"
}
